package com.ust.data_ingestion_service.controller;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;

import com.ust.data_ingestion_service.client.BinClient;
import com.ust.data_ingestion_service.dto.BinUpdateRequest;

@RestController
@RequestMapping("/data-ingestion")
public class DataIngestionController {

    @Autowired
    private BinClient binClient;

    // Simulate receiving data and updating bin fill level
    @PostMapping("/simulate/{binId}")
    public String simulateBinData(@PathVariable String binId, @RequestParam Double fillLevel) {
        binClient.updateBin(binId, new BinUpdateRequest(fillLevel));
        return "Bin fill level updated for bin ID: " + binId;
    }
}