package com.ust.data_ingestion_service.client;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestBody;

import com.ust.data_ingestion_service.dto.BinUpdateRequest;

@FeignClient(name = "wastebin-service")
public interface BinClient {
    @PutMapping("/bins/{binId}")
    void updateBin(@PathVariable("binId") String binId, @RequestBody BinUpdateRequest updateRequest);
}
